<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient3"
    android:backgroundTint="@color/white"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="15dp"
    android:paddingBottom="35dp"
    android:layout_margin="32dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/version"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update Addhayon "
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/gradient2StartColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Version : "
        android:textColor="@color/i1"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <TextView
        android:id="@+id/Mb"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Download size: 36 MB"
        android:textColor="@color/i1"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Addhayon recommands that you update to the latest version. Please update this app and use latest features."
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/i2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mb"/>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/pra2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="When download are completed. Then check the download file 'Addhayon.apk' or your device Storage > Download > Addhayon> 'Addhayon.apk' and install it."
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/i2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content"/>

    <TextView
        android:id="@+id/thanks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thanks."
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:textColor="@color/i2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pra2"/>

    <TextView
        android:gravity="center"
        android:id="@+id/update"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:text="Update"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/gradient4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thanks"/>


</androidx.constraintlayout.widget.ConstraintLayout>