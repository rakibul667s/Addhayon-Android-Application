<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:padding="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fpotp"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text="Sent 6 digits OTP code in your mail."
            android:textAlignment="center"
            android:textColor="@color/i2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:text="Please, check your mail."
            android:textAlignment="center"
            android:textColor="@color/i2"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:textAlignment="center"
            android:text="gygyffrtdrydtyfiyu"
            android:textColor="#FF8686"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:inputType="number"
            android:id="@+id/otpT"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_border"
            android:drawablePadding="10dp"
            android:hint="0 0 0 0 0 0"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/i2"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/wrongMsg"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:textAlignment="center"
            android:textColor="@color/gradient2StartColor"
            android:textSize="14sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:clickable="true"
            android:id="@+id/verify"
            android:background="@drawable/red_button_ripple"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Virefy"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:visibility="gone"
                android:layout_centerInParent="true"
                app:lottie_rawRes="@raw/button_loading_white"
                android:id="@+id/animation_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="true" />

        </RelativeLayout>



        <TextView
            android:id="@+id/sign_in_page"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:text="Already have a account. Sign in"
            android:gravity="center"
            android:textColor="@color/loginStar"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>