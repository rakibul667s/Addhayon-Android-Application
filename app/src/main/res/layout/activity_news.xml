<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity"
    android:background="@color/white">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/gradient2StartColor">


        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="News"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="75dp"
        app:cardCornerRadius="8dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/prothomalo"
                android:layout_weight="1"
                android:background="@color/gradient2StartColor"
                android:padding="2dp"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/prothomalo"/>

            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/somoi"
                android:layout_weight="1"
                android:background="@drawable/somoi"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/bbc"
                android:layout_weight="1"
                android:background="@drawable/bbc"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center"
                >
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/bdnews"
                android:background="@drawable/bdnews"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical">

            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/kalerkontho"
                android:layout_weight="1"
                android:background="@drawable/kalerkontho"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/samakal"
                android:layout_weight="1"
                android:background="@drawable/samakal"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center"
                >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_circleColor="@color/gradient2StartColor"
        app:mbn_countBackgroundColor="#191818"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/gradient2StartColor"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="@color/gradient2EndColor" />
</FrameLayout>