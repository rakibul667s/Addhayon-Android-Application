<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".userProfile"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/cover_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/gradient4"
        android:orientation="horizontal"
        >
    </ImageView>



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/baseline_puser"
        app:civ_border_width="5dp"
        app:civ_border_color="#FFFFFF">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Addhayon"
        android:textColor="@color/gradient2StartColor"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/bio"
        android:layout_marginTop="280dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Build up your skills. . ."
        android:textColor="@color/i2"
        android:textSize="14sp" />


      <LinearLayout
          android:layout_marginTop="330dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:padding="8dp"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:orientation="horizontal"
          android:background="@color/gradient2StartColor">

          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:src="@drawable/ic_baseline_dashborad"/>
              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="RANK"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>
              <TextView
                  android:id="@+id/rank"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="Na"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>

          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:src="@drawable/baseline_checklist_24"/>

              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="Score"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>
              <TextView
                  android:id="@+id/totalScore"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="NA"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>

          </LinearLayout>


      </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="410dp"
        >
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/sclclg"
            android:drawableStart="@drawable/baseline_school_24"
            android:drawablePadding="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Set your study backgraound"
            android:textColor="@color/i2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address2"
            android:drawableStart="@drawable/baseline_room_24"
            android:drawablePadding="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Address "
            android:textColor="@color/i2"
            android:textSize="14sp" />
            <TextView
                android:id="@+id/birth"
                android:drawableStart="@drawable/baseline_cake_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="6 JAN 2023"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView

                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Contact us : "
                android:textColor="@color/i2"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/email"
                android:drawableStart="@drawable/ic_baseline_email"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="addhayon.application@gmail.com"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/phone"
                android:drawableStart="@drawable/ic_baseline_call"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="+8801704081993"
                android:textColor="@color/i2"
                android:textSize="14sp" />
        </LinearLayout>


    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/button1"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="75dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="@drawable/gradient5">

        </de.hdodenhof.circleimageview.CircleImageView>
    </RelativeLayout>




    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_circleColor="@color/gradient2StartColor"
        app:mbn_countBackgroundColor="#191818"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/gradient2StartColor"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="@color/gradient2EndColor"
        tools:ignore="MissingConstraints" />

</FrameLayout>