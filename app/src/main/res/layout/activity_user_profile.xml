<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".userProfile"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient4"
        android:orientation="horizontal"
        >
    </ImageView>



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/sony_profile"
        app:civ_border_width="5dp"
        app:civ_border_color="#FFFFFF">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="230dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Addhayon"
        android:textColor="@color/gradient2StartColor"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/bio"
        android:layout_marginTop="260dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Build up your skills. . ."
        android:textColor="@color/i1"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        >
      <LinearLayout
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:padding="8dp"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:orientation="horizontal"
          android:background="@color/gradient2StartColor">

          <LinearLayout
              android:layout_gravity="center"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:src="@drawable/ic_baseline_dashborad"/>
              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="RANK"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>
              <TextView
                  android:id="@+id/rank"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="Na"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>

          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:src="@drawable/baseline_checklist_24"/>

              <TextView
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="Score"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>
              <TextView
                  android:id="@+id/totalScore"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:text="NA"
                  android:textSize="12sp"
                  android:textColor="@color/white"/>

          </LinearLayout>


      </LinearLayout>


    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/button1"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="75dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="@drawable/gradient5">

        </de.hdodenhof.circleimageview.CircleImageView>
    </RelativeLayout>




    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_circleColor="@color/gradient2StartColor"
        app:mbn_countBackgroundColor="#191818"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/gradient2StartColor"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="@color/gradient2EndColor"
        tools:ignore="MissingConstraints" />

</FrameLayout>