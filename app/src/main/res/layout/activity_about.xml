<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".userProfile"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient4"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="ADDHAYON"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="অধ্যয়ন"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/i1"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/sonycover"
        android:outlineSpotShadowColor="#EFC2C2"
        app:civ_border_width="5dp"
        app:civ_border_color="#FFFFFF">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="240dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="MD. RAKIBUL ISLAM"
        android:textColor="@color/gradient2StartColor"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="275dp"
        android:layout_marginBottom="75dp"
        >
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bio"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Developer"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:layout_marginTop="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="2dp"
                android:background="#FA9E9E"
                android:gravity="center_vertical"
                android:textColor="@color/i2"
                android:textSize="20sp" /><TextView
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Details :"
                android:textColor="@color/i1"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/sclclg"
                android:drawableStart="@drawable/baseline_school_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Pundra University of Science and Technology"
                android:textColor="@color/i2"
                android:textSize="14sp" />

            <TextView
                android:drawableStart="@drawable/baseline_room_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Thengamara, Bogura, Bangladesh"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:drawableStart="@drawable/baseline_cake_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="6 JAN 2000"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:drawableStart="@drawable/baseline_favorite_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Married to REZWANA RINTY"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="2dp"
                android:background="#EFC2C2"
                android:gravity="center_vertical"
                android:textColor="@color/i2"
                android:textSize="20sp" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Family details :"
                android:textColor="@color/i1"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:paddingStart="6dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="Father   : MD. SHAHIN ISLAM"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:paddingStart="6dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="Mother : MST. CHAMELI BEGUM"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:paddingStart="6dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="Wife      : REZWANA RINTY"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:paddingStart="6dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="Brother : MD. MAHEDI HASAN"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="2dp"
                android:background="#EFC2C2"
                android:gravity="center_vertical"
                android:textColor="@color/i2"
                android:textSize="20sp" />
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Contact me : "
                android:textColor="@color/i1"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/email"
                android:drawableStart="@drawable/ic_baseline_email"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="md.rakibulislam_1@yahoo.com"
                android:textColor="@color/i2"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/phone"
                android:drawableStart="@drawable/ic_baseline_call"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="+8801704081993"
                android:textColor="@color/i2"
                android:textSize="14sp" />

        </LinearLayout>


    </ScrollView>




    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_circleColor="@color/gradient2StartColor"
        app:mbn_countBackgroundColor="#191818"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/gradient2StartColor"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="@color/gradient2EndColor"
        tools:ignore="MissingConstraints" />

</FrameLayout>