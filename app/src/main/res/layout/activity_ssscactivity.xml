<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sSSCActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/gradient2StartColor">


        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="SCIENCE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <ScrollView
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/bn1st"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="BANGLA 1ST PAPER"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </LinearLayout>
                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/bn2nd"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="BANGLA 2ND PAPER"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/en1st"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ENGLISH 1ST PAPER"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </LinearLayout>
                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/en2nd"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ENGLISH 2ND PAPER"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/math"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MATH"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </LinearLayout>
                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/islam"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ISLAM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ict"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ICT"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </LinearLayout>
                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/gs"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="GS"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/phy"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="PHYSICS"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </LinearLayout>
                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/chem"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CHEMISTRY"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/bio"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="BIOLOGY"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </LinearLayout>
                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/hm"
                    android:layout_weight="1"
                    android:background="@drawable/gradient3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="HIGHER MATH"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_circleColor="@color/gradient2StartColor"
        app:mbn_countBackgroundColor="#191818"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/gradient2StartColor"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="@color/gradient2EndColor" />


</FrameLayout>