<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfileActivity"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">
        <ImageView
            android:background="@color/gradient2StartColor"
            android:scaleType="centerCrop"
            android:id="@+id/cover_img"
            android:layout_width="match_parent"
            android:layout_height="220dp" android:orientation="horizontal"
            />
            <ImageView
                android:id="@+id/coverB"
                android:layout_gravity="end"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-35dp"
                android:src="@drawable/baseline_camera" />
    </LinearLayout>




        <ImageView
            android:id="@+id/profileB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="238dp"
            android:backgroundTint="@color/gradient2StartColor"
            android:background="@drawable/baseline_camera"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_puser"
            app:civ_border_width="5dp"
            app:civ_border_color="#FFFFFF">
        </de.hdodenhof.circleimageview.CircleImageView>



    <EditText
        android:id="@+id/name"
        android:layout_marginTop="270dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:hint="Change your name. . ."
        android:textColor="@color/i2"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/bio"
        android:layout_marginTop="320dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/baseline_emoji_emotions_24"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:hint="Set your status. . ."
        android:textColor="@color/i2"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/address"
        android:layout_marginTop="370dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/baseline_room_24"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:hint="Address. . ."
        android:textColor="@color/i2"
        android:textSize="14sp" />


    <EditText
               android:layout_marginTop="420dp"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:padding="5dp"
               android:layout_weight="2"
               android:id="@+id/dateOfBirth"
               android:drawableLeft="@drawable/baseline_cake_24"
               android:drawablePadding="10dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:gravity="center_vertical"
               android:hint="Date of Birth"
               android:textColor="@color/i2"
               android:textSize="14sp" />

    <EditText
        android:id="@+id/scl_clg"
        android:layout_marginTop="470dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/baseline_school_24"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:hint="set school or college. . ."
        android:textColor="@color/i2"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/phn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="520dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:hint="+880"
        android:textColor="@color/i2"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cancel"
            android:padding="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/baseline_clear_24"
            android:background="@drawable/gradient5"/>


        <RelativeLayout
            android:clickable="true"
            android:id="@+id/save"
            android:background="@drawable/red_button_ripple"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/button_text"
                android:textColor="@color/white"
                android:text="Save"
                android:textSize="24sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/baseline_save_alt_24"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.airbnb.lottie.LottieAnimationView
                android:visibility="gone"
                android:layout_centerInParent="true"
                app:lottie_rawRes="@raw/button_loading_white"
                android:id="@+id/animation_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="true" />

        </RelativeLayout>
    </LinearLayout>




</FrameLayout>