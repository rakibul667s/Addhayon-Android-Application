<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfileActivity"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cover_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient4"
            android:orientation="horizontal"
            />
            <ImageView
                android:layout_gravity="end"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-35dp"
                android:src="@drawable/baseline_camera" />
    </LinearLayout>




        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="220dp"
            android:backgroundTint="@color/gradient2StartColor"
            android:background="@drawable/baseline_camera"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_puser"
            app:civ_border_width="5dp"
            app:civ_border_color="#FFFFFF">
        </de.hdodenhof.circleimageview.CircleImageView>



    <EditText
        android:id="@+id/name"
        android:layout_marginTop="240dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Change your name. . ."
        android:textColor="@color/i1"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/bio"
        android:layout_marginTop="290dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Set your status. . ."
        android:textColor="@color/i1"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/address"
        android:layout_marginTop="340dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Address. . ."
        android:textColor="@color/i1"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/scl_clg"
        android:layout_marginTop="390dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="School or College. . ."
        android:textColor="@color/i1"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/phn"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="440dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="+880"
        android:textColor="@color/i1"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cancel"
            android:padding="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/baseline_clear_24"
            android:background="@drawable/gradient5"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/save"
            android:padding="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/baseline_save_alt_24"
            android:background="@drawable/gradient5"/>
    </LinearLayout>




</FrameLayout>